@import "../../wxParse/wxParse.wxss";
@import "../../templates/apps/apps.wxss";
page{
   background-color: #FAFAFA
}
 
.about-top-img{
  width: 100%;
  height: 500rpx;
  opacity: 0.8;
}

.about-avatar-img{
  display: block;
  width: 300rpx;
  height: 300rpx;
  position:absolute;
  margin: 0 auto;
  top: 350rpx;
  border-radius: 50%;
  border: 20rpx solid #ffffff;
  box-shadow:0px 0px 40rpx 0px rgba(0,0,0,0.5);
  left:50%;
  margin-left:-175rpx;
}

.info{
  margin-top: 200rpx;
  text-align: center;
}

.birth{
  font-size: 60rpx;
  font-weight: bold;
  color: var(--font-color-one);
  margin-bottom:20rpx;
}

.job{
  font-size: 36rpx;
  color: var(--font-color-two);
   margin-bottom:20rpx;
}

.like-hot-view{
  width:60%;
  margin:0 auto 30rpx;
}

.like-hot{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  margin: 0 30rpx;
}

.num{
  font-size: 50rpx;
  font-weight: 900;
  color: var(--font-color-one);
  margin-bottom: 20rpx;
}

.text{
  font-size: 36rpx;
  color: var(--font-color-two);
}

.left{
  display: inline-block;
  text-align: center;
  width: 20%;
}

.center{
  display: inline-block;
  text-align: center;
  width: 60%;
}

.right{
  display: inline-block;
  text-align: center;
  width: 20%;
}